<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/transparent">

    <com.github.jorgecastillo.FillableLoader
        android:id="@+id/fillableLoader"
        app:fl_clippingTransform="waves"
        app:fl_fillColor="#1c9ade"
        app:fl_fillDuration="7000"
        app:fl_fillPercentage="@integer/fillPercentage"
        app:fl_originalHeight="800"
        app:fl_originalWidth="800"
        app:fl_strokeColor="#1c9ade"
        app:fl_strokeDrawingDuration="0"
        app:fl_strokeWidth="@dimen/strokeWidth"
        android:layout_width="200dp"
        android:layout_height="200dp" />

</LinearLayout>